	<description>Lire Plus Module par ASFCANADA</description>

	<files>
		<filename module="mod_lirePlusHistorique">mod_lirePlusHistorique.php</filename>
		<filename module="mod_lirePlusHistorique">index.html</filename>
		<filename module="mod_lirePlusHistorique">mod_lirePlusHistorique.xml</filename>
		<folder module="mod_lirePlusHistorique">tmpl</folder>
